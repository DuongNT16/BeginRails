<% provide :title, t("views.users.index.all_user") %>
<h1><%= t "views.users.index.all_user" %></h1>

<ul class="users">
  <% @users.each do |user| %>
    <li>
	  <%= gravatar_for user, size: 50 %>
	  <%= link_to user.name, user %>
	  <% if current_user.admin? && !current_user?(user) %>
	  	| <%= link_to t("delete"), user, method: :delete, data: {confirm: t("views.users.index.you_sure")} %>
	  <% end %>
	</li>
  <% end %>
  <%= paginate @users, theme: "twitter-bootstrap-3" %>
</ul>